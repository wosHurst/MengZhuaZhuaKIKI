#mine{
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}

.header{
  width: 100%;
  height: 410rpx;
  background: #ff6034;
  position: relative;
}

.van-notice-bar{
  height: 50rpx !important;
  line-height: 50rpx !important;
}

.image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  position: relative;
  left: 50%;
  margin-left: -60rpx;
}

.name{
  text-align: center;
  color: #fff;
  margin-top: 10rpx;
}

.nav{
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 30rpx;
}

.nav-item{
  flex: 1;
  text-align: center;
  color: #fff;
}

.nav-item-title{
  font-size: 26rpx;
  margin-top: 10rpx;
}

.group{
  margin-top: 20rpx;
}